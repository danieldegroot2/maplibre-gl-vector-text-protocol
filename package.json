{
    "name": "maplibregl-vector-text-protocol",
    "version": "0.0.1",
    "description": "Allows various text based vector formats to be used with maplibre",
    "keywords": [
        "maplibre",
        "topojson",
        "kml",
        "gpx",
        "tcx",
        "csv",
        "tsv",
        "convert"
    ],
    "author": "James McAndrew  <jim@loc8.us>",
    "license": "MIT",
    "main": "dist/maplibregl-vector-text-protocol.js",
    "module": "dist/maplibregl-vector-text-protocol.esm.js",
    "browser": "dist/maplibregl-vector-text-protocol.min.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rm -rf ./dist",
        "build-dev": "NODE_ENV=development npm run build",
        "watch-dev": "NODE_ENV=development npm run watch",
        "build-prod": "NODE_ENV=production npm run build",
        "build": "npm run clean && rollup -c rollup.config.js",
        "watch": "npm run clean && rollup -c rollup.config.js --watch"
    },
    "devDependencies": {
        "@open-wc/building-rollup": "^2.0.1",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@rollup/plugin-typescript": "^8.3.0",
        "@types/geojson": "^7946.0.8",
        "@types/topojson": "^3.2.3",
        "maplibre-gl": "^2.0.0-pre.6",
        "rollup": "^2.63.0",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-terser": "^7.0.2",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "@tmcw/togeojson": "4.5.0",
        "csv2geojson": "^5.1.1",
        "topojson-client": "^3.1.0"
    }
}
